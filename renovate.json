{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "group:allNonMajor"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/workspaces/nomad-digitalocean/nomad.tf/",
        "/workspaces/nomad-cascadia/nomad.tf/",
        "/modules/nomad/jobspecs/.*\\.hcl/"
      ],
      "matchStrings": [
        ".*\"(?<currentValue>.+)\"\\s*#\\s*image:\\s*(?<depName>.+)\\n"
      ],
      "datasourceTemplate": "docker"
    }
  ],
  "ignorePaths": [
    "docker/**"
  ]
}
